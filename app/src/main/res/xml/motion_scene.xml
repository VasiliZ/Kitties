<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/rest">
        <Constraint
            android:id="@+id/cardCat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/likeIndicator"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <Transform
                android:scaleX="0.5"
                android:scaleY="0.5" />
        </Constraint>

        <Constraint
            android:id="@+id/dislikeIndicator"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <Transform
                android:scaleX="0.5"
                android:scaleY="0.5" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/likeSet"
        app:deriveConstraintsFrom="@id/rest">
        <Constraint
            android:id="@+id/cardCat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintWidth_percent="0.7" />

        <Constraint
            android:id="@+id/likeIndicator"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Transform
                android:scaleX="1.0"
                android:scaleY="1.0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/endOfMotionLike"
        app:deriveConstraintsFrom="@id/likeSet">
        <Constraint
            android:id="@+id/likeIndicator"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <Transform
                android:scaleX="0.5"
                android:scaleY="0.5" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/dislikeSet"
        app:deriveConstraintsFrom="@id/rest">
        <Constraint
            android:id="@+id/cardCat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintWidth_percent="0.7" />

        <Constraint
            android:id="@+id/dislikeIndicator"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Transform
                android:scaleX="1.0"
                android:scaleY="1.0" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/endOfMotionDislike"
        app:deriveConstraintsFrom="@id/dislikeSet">
        <Constraint
            android:id="@+id/dislikeIndicator"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <Transform
                android:scaleX="0.5"
                android:scaleY="0.5" />
        </Constraint>

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/likeSet"
        app:constraintSetStart="@id/rest"
        app:duration="500">
        <OnSwipe
            app:dragDirection="dragRight"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/cardCat"
            app:touchAnchorSide="right"
            app:touchRegionId="@id/cardCat" />
        <KeyFrameSet>
            <KeyAttribute
                android:rotation="20"
                app:framePosition="60"
                app:motionTarget="@+id/cardCat" />
        </KeyFrameSet>
    </Transition>

    <Transition
        app:constraintSetEnd="@id/dislikeSet"
        app:constraintSetStart="@id/rest"
        app:duration="500">

        <KeyFrameSet>
            <KeyAttribute
                android:rotation="-20"
                app:framePosition="60"
                app:motionTarget="@+id/cardCat" />
        </KeyFrameSet>
        <OnSwipe
            app:dragDirection="dragLeft"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/cardCat"
            app:touchAnchorSide="left"
            app:touchRegionId="@id/cardCat" />
    </Transition>

    <Transition
        app:autoTransition="jumpToEnd"
        app:constraintSetEnd="@id/endOfMotionLike"
        app:constraintSetStart="@id/likeSet"
        app:duration="500" />


    <Transition
        app:autoTransition="jumpToEnd"
        app:constraintSetEnd="@id/endOfMotionDislike"
        app:constraintSetStart="@id/dislikeSet"
        app:duration="500" />
</MotionScene>